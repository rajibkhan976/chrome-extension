{
  "name": "Mybook",
  "version": "1.0.13.4",
  "manifest_version": 3,
  "description": "Make quality friends and track engagements",
  "background": {
    "service_worker": "serviceWorker.js"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "images/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16" : "./images/16X16.png",
    "48" : "./images/48X48.png",
    "128": "./images/128X128.png"
  },
  "action": {
    "default_title": "Friender"
  },
  "content_scripts": [
    {
        "matches": [
            "https://www.facebook.com/*"
        ],
        "js": [
            "commonContent.js"
        ],
        "css" : ["content.css"]
    },
    {
      "matches": [
        "https://*.friender.io/*",
         "https://localhost:3000/*"
      ],
      "js": [
        "portalScript.js"
      ]
  }
  ],
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "storage",
    "declarativeNetRequest",
    "alarms"
  ],
  "host_permissions": [
    "https://www.messenger.com/*",
    "https://*.facebook.com/*",
    "https://m.facebook.com/*",
    "https://*.execute-api.us-east-2.amazonaws.com/*",
    "https://*.execute-api.us-east-1.amazonaws.com/*"
  ],
  "externally_connectable": {
    "matches": [
      "https://localhost:3000/*",
      "https://beta.friender.io/*",
      "https://dev.friender.io/*"
    ],
    "accepts_tls_channel_id": true
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'",
    "content_scripts": "script-src 'self'; object-src 'none'"
  },
  "declarative_net_request" : {
    "rule_resources" : [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "ruleset.json"
    }]
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+F",
    "mac": "Command+Shift+F",
        "linux": "Ctrl+Shift+F"
      }
    }
  }
}